<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:backgroundTint="@color/black_main"
    android:gravity="center"
    android:background="@color/white">

    <EditText
        android:id="@+id/etNotificationTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:padding="15dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittext_background"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/etNotificationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notification Message"
        android:padding="15dp"
        android:background="@drawable/noti_msg"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        android:minLines="4"/>

    <Button
        android:id="@+id/btnSubmitNotification"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Send Notification"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/white"
        android:padding="12dp"/>

</LinearLayout>
